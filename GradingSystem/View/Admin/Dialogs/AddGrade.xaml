<Window x:Class="GradingSystem.View.Admin.Dialogs.AddGrade"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:GradingSystem.View.Admin.Dialogs" 
        mc:Ignorable="d" Title="Show Grade"
        WindowStartupLocation="CenterScreen" Height="720" Width="1200"
        WindowStyle="None" Background="{x:Null}" AllowsTransparency="True" MouseDown="Window_MouseDown">

    <Grid>
        <Border Background="Black" Margin="05 05 05 05" CornerRadius="4" Padding="5 5 5 5">
            <materialDesign:Card>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Grid Grid.Row="1">
                        <materialDesign:Card Background="DarkGreen" Margin="10" Padding="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Student ID Input -->
                                <TextBox x:Name="idTxt"  
                     Style="{StaticResource MaterialDesignOutlinedTextBox}" 
                     Height="40" Width="200" FontSize="15"
                     Padding="10 0 0 0" Background="White" 
                     materialDesign:HintAssist.Hint="Student ID"
                     Grid.Row="0" MaxLength="15" 
                     KeyDown="StudentIdTxt_KeyDown"/>

                                <!-- Student Information Labels -->
                                <TextBlock x:Name="studentNameTxt" Text="Student Name" Foreground="White" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                       TextWrapping="Wrap" FontSize="16" Grid.Row="1" 
                       Style="{StaticResource MaterialDesignBody1TextBlock}"/>

                                <TextBlock x:Name="courseTxt" Text="Program" Foreground="White" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                       TextWrapping="Wrap" FontSize="16" Grid.Row="2"
                       Style="{StaticResource MaterialDesignBody1TextBlock}"/>

                                <TextBlock x:Name="semesterTxt" Text="Semester" Foreground="White" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                       TextWrapping="Wrap" FontSize="16" Grid.Row="3"
                       Style="{StaticResource MaterialDesignBody1TextBlock}"/>

                                <TextBlock x:Name="yearLevelTxt" Text="Year Level" Foreground="White" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                       TextWrapping="Wrap" FontSize="16" Grid.Row="4"
                       Style="{StaticResource MaterialDesignBody1TextBlock}"/>

                                <TextBlock x:Name="scholarshipTxt" Text="Status" Foreground="White" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                       TextWrapping="Wrap" FontSize="16" Grid.Row="5"
                       Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                            </Grid>
                        </materialDesign:Card>
                    </Grid>
                    <Grid Grid.Column="1" Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <DataGrid ItemsSource="{Binding StudentSubjects}"  Style="{StaticResource DataGridStyle1}"
                                          RowStyle="{DynamicResource DataGridRowStyle1}" x:Name="StudentSubjectDatagrid"
                                          ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                                          CellStyle="{DynamicResource DataGridCellStyle1}" 
                                          HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Auto" CellEditEnding="DataGrid_CellEditEnding" Margin="0,10,10,10">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="Descriptive Title" Binding="{Binding Subject.SubjectName}" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="Course Code" Binding="{Binding CourseCode}" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="Professor" Binding="{Binding ProfessorName}" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="Grade" Binding="{Binding Grade}" IsReadOnly="False">
                                        <DataGridTextColumn.CellStyle>
                                            <Style TargetType="DataGridCell">
                                                <Setter Property="Background" Value="White"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Setter Property="Padding" Value="10"/>
                                                <Setter Property="Height" Value="30"/>
                                                <Setter Property="BorderBrush" Value="DarkGray"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                            </Style>
                                        </DataGridTextColumn.CellStyle>
                                    </DataGridTextColumn>

                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <materialDesign:Card Background="DarkGreen" Margin="0 0 10 0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="220"/>
                                            <ColumnDefinition Width="170"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" Background="White" Margin="10" Width="200" HorizontalAlignment="Left"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="Search" Padding="10 0 0 0" TextChanged="SearchTextBox_TextChanged">
                                        </TextBox>

                                        <Button Style="{StaticResource MaterialDesignFlatDarkBgButton}" Background="Green"
                                                Width="150" Grid.Column="1" HorizontalAlignment="Left" Click="AddSubjectBtn" >
                                            <TextBlock Text="ADD SUB"/>
                                        </Button>
                                        <Button Style="{StaticResource MaterialDesignFlatDarkBgButton}" Background="DarkRed"
                                                Width="150" Grid.Column="2" HorizontalAlignment="Left" Click="RemoveSubjectBtn" >
                                            <TextBlock Text="REMOVE SUB"/>
                                        </Button>
                                    </Grid>
                                </materialDesign:Card>
                            </Grid>
                            <DataGrid ItemsSource="{Binding FilteredSubjects}" x:Name="SubjectListDataGrid" Style="{StaticResource DataGridStyle1}"
                                          RowStyle="{DynamicResource DataGridRowStyle1}"
                                          ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                                          CellStyle="{DynamicResource DataGridCellStyle1}" 
                                          HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Auto" CellEditEnding="DataGrid_CellEditEnding" Margin="0,10,10,10" Grid.Row="1">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding SubjectId}" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="Course Code" Binding="{Binding CourseCode}" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="Descriptive Title" Binding="{Binding SubjectName}" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="Professor" Binding="{Binding ProfessorName}" IsReadOnly="True"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Grid>
                </Grid>
            </materialDesign:Card>
        </Border>
    </Grid>
</Window>
