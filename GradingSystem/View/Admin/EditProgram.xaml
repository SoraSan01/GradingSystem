<Window x:Class="GradingSystem.View.Admin.EditProgram"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradingSystem.View.Admin"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d" Title="Edit Program"
        WindowStartupLocation="CenterScreen" Width="670" Height="200"
        WindowStyle="None" Background="{x:Null}" AllowsTransparency="True" MouseDown="Window_MouseDown">
    <Grid>
        <Border Background="Black" Margin="05 05 05 05" CornerRadius="4">
            <materialDesign:Card Effect="{StaticResource MaterialDesignElevationShadow1}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Background="Green">
                        <Grid HorizontalAlignment="Left">
                            <TextBlock Text="Edit Program" Margin="10 0 0 0" 
                                FontSize="15"
                                Style="{StaticResource MaterialDesignCaptionTextBlock}" 
                                VerticalAlignment="Center"/>
                        </Grid>
                        <Grid HorizontalAlignment="Right">
                            <StackPanel Margin="0 0 20 0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                                <Button Style="{StaticResource MaterialDesignIconButton}" x:Name="CloseButton" Content="{materialDesign:PackIcon Kind=WindowClose}" Width="30" Height="30" Margin="5" VerticalAlignment="Top" Click="Close"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="1" Margin="20 05 20 20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="ProgramNameTxt" Text="{Binding SelectedProgram.ProgramName}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                  Margin="0 10 20 20" Height="50" Width="300" FontSize="20"
                  Grid.Column="0" MaxLength="20">
                                <materialDesign:HintAssist.Hint>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Program Name" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </materialDesign:HintAssist.Hint>
                            </TextBox>

                            <TextBox x:Name="DescriptionTxt"  Text="{Binding SelectedProgram.Description}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                  Margin="0 10 20 20" Height="50" Width="300" FontSize="20"
                  Grid.Column="1" MaxLength="50">
                                <materialDesign:HintAssist.Hint>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Program Description" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </materialDesign:HintAssist.Hint>
                            </TextBox>
                        </Grid>
                    </Grid>
                    
                    <Grid Grid.Row="2" Margin="10 0 10 10">
                        <Grid>
                            <Button Style="{StaticResource MaterialDesignFlatDarkBgButton}" Click="SaveBtn">SAVE</Button>
                        </Grid>
                    </Grid>
                </Grid>
            </materialDesign:Card>
        </Border>
    </Grid>
</Window>
