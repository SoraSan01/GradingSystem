<Window x:Class="GradingSystem.View.Admin.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradingSystem.View.Admin"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" Background="{x:Null}" AllowsTransparency="True" MouseDown="window_MouseDown">
    <Grid>
        <Border Background="Black" Margin="05 05 05 05" CornerRadius="4">
            <materialDesign:Card Effect="{StaticResource MaterialDesignElevationShadow1}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Background="Green">
                        <Grid HorizontalAlignment="Left">
                            <TextBlock Text="Add Students" Margin="10 0 0 0" 
                                   FontSize="15"
                                   Style="{StaticResource MaterialDesignCaptionTextBlock}" 
                                   VerticalAlignment="Center"/>
                        </Grid>
                        <Grid HorizontalAlignment="Right">
                            <StackPanel Margin="0 0 20 0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                                <Button Style="{StaticResource MaterialDesignIconButton}" x:Name="CloseButton" Content="{materialDesign:PackIcon Kind=WindowClose}" Width="30" Height="30" Margin="5" VerticalAlignment="Top" Click="Close"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="1" Margin="20 05 20 20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="FnameTxt" Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                     Margin="0 10 10 10" Height="50" Width="300" FontSize="20"
                     Grid.Column="0" MaxLines="20">
                                <materialDesign:HintAssist.Hint>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="First Name" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </materialDesign:HintAssist.Hint>
                            </TextBox>

                            <TextBox x:Name="LnameTxt"  Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                     Margin="0 10" Height="50" Width="300" FontSize="20"
                     Grid.Column="1" MaxLines="20">
                                <materialDesign:HintAssist.Hint>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Last Name" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </materialDesign:HintAssist.Hint>
                            </TextBox>
                        </Grid>

                        <Grid Grid.Row="1" Margin="0 0 0 0">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox x:Name="rolesCmb"  Style="{StaticResource MaterialDesignFloatingHintComboBox}" 
                      Margin="0 10 10 10" Height="50" Width="300" FontSize="20"
                      Grid.Column="0" SelectedValuePath="Content">
                                <materialDesign:HintAssist.Hint>
                                    Role
                                </materialDesign:HintAssist.Hint>

                                <ComboBoxItem>Admin</ComboBoxItem>
                                <ComboBoxItem>Staff</ComboBoxItem>
                                <ComboBoxItem>Encoder</ComboBoxItem>
                            </ComboBox>

                            <TextBox x:Name="usernameTxt"  Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                     Margin="0 10" Height="50" Width="300" FontSize="20"
                                     Grid.Column="1" MaxLines="20">
                                <materialDesign:HintAssist.Hint>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Username" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </materialDesign:HintAssist.Hint>
                            </TextBox>
                        </Grid>

                        <Grid Grid.Row="2">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="passwordTxt" Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                     Margin="0 10 10 10" Height="50" Width="300" FontSize="20"
                                     Grid.Column="0" MaxLines="20">
                                <materialDesign:HintAssist.Hint>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Password" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </materialDesign:HintAssist.Hint>
                            </TextBox>

                            <TextBox x:Name="emailTxt"  Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                     Margin="0 10" Height="50" Width="300" FontSize="20"
                                     Grid.Column="1" MaxLines="20">
                                <materialDesign:HintAssist.Hint>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Email" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </materialDesign:HintAssist.Hint>
                            </TextBox>
                        </Grid>

                    </Grid>
                    <Grid Grid.Row="3" Margin="10 0 10 10">
                        <Grid>
                            <Button Height="40" Style="{StaticResource   MaterialDesignFlatDarkBgButton}" Click="addUserBtn">SAVE</Button>
                        </Grid>
                    </Grid>
                </Grid>
            </materialDesign:Card>
        </Border>
    </Grid>
</Window>
