<UserControl x:Class="GradingSystem.View.Admin.ManageCourse"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModel="clr-namespace:GradingSystem.ViewModel"
             xmlns:local="clr-namespace:GradingSystem.View.Admin"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1106.25">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- Dashboard Title -->
        <Grid Grid.Row="0" Margin="30 0 0 0">
            <TextBlock Text="Manage Students" 
           FontSize="35"
           Style="{StaticResource MaterialDesignCaptionTextBlock}" 
           VerticalAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="1">
            <Border Background="Black" Margin="10 10 10 10" CornerRadius="4">
                <materialDesign:Card Background="White" Height="500">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Effect="{StaticResource MaterialDesignElevationShadow1}">
                            <materialDesign:Card>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0" Margin="20 0 0 0">
                                        <Button Width="100" HorizontalAlignment="Left" Style="{StaticResource MaterialDesignFlatDarkBgButton}">
                                            Export
                                        </Button>
                                    </Grid>

                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="0">
                                            <TextBox Style="{StaticResource searchBoxes}" Width="200"
                                 Height="30">
                                            </TextBox>
                                        </Grid>
                                        <Grid Grid.Column="1">
                                            <Button Style="{StaticResource MaterialDesignFlatDarkBgButton}" Width="100">
                                                <StackPanel>
                                                    <materialDesign:PackIcon Kind="Add" Height="20"/>
                                                </StackPanel>
                                            </Button>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </materialDesign:Card>
                        </Grid>

                        <Grid Grid.Row="1" Height="auto">
                            <DataGrid x:Name="studentsDataGrid"
                  CanUserSortColumns="False" CanUserReorderColumns="False" ItemsSource="{Binding Courses}"
                                  AutoGenerateColumns="False">

                                <!-- Define RowStyle to set background for all rows -->
                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="Background" Value="White"/>
                                    </Style>
                                </DataGrid.RowStyle>

                                <DataGrid.Columns>

                                    <DataGridTextColumn Header="CourseID" IsReadOnly="True" CanUserResize="False" Width="*" Binding="{Binding CourseId}"/>
                                    <DataGridTextColumn Header="CourseName" CanUserResize="False" Binding="{Binding CourseName}" IsReadOnly="True" Width="*"/>
                                    <DataGridTextColumn Header="CreatedAt" CanUserResize="False" Binding="{Binding CreatedAt, StringFormat=dd/MM/yyyy hh:mm tt}" IsReadOnly="True" Width="*"/>

                                    <DataGridTemplateColumn Header="Action" CanUserResize="False" IsReadOnly="True" Width="auto" >
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Style="{StaticResource gridEditButton}">
                                                        <materialDesign:PackIcon Kind="PencilOutline" Style="{StaticResource gridButtonIcon}"/>
                                                    </Button>
                                                    <Button Margin="5 0 0 0" Style="{StaticResource gridRemoveButton}">
                                                        <materialDesign:PackIcon Kind="DeleteOutline" Style="{StaticResource gridButtonIcon}"/>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                </DataGrid.Columns>

                            </DataGrid>
                        </Grid>

                    </Grid>
                </materialDesign:Card>
            </Border>
        </Grid>
    </Grid>
</UserControl>
