<Window x:Class="GradingSystem.View.Admin.EditStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradingSystem.View.Admin"
        mc:Ignorable="d" Title="Edit Student"
        WindowStartupLocation="CenterScreen" Width="670" Height="340"
        WindowStyle="None" Background="{x:Null}" AllowsTransparency="True" MouseDown="Window_MouseDown">
    <Grid>
        <Border Background="Black" Margin="05 05 05 05" CornerRadius="4">
            <materialDesign:Card Effect="{StaticResource MaterialDesignElevationShadow1}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Background="Green">
                        <Grid HorizontalAlignment="Left">
                            <TextBlock Text="Edit Students" Margin="10 0 0 0" 
                                    FontSize="15"
                                    Style="{StaticResource MaterialDesignCaptionTextBlock}" 
                                    VerticalAlignment="Center"/>
                        </Grid>
                        <Grid HorizontalAlignment="Right">
                            <StackPanel Margin="0 0 20 0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                                <Button Style="{StaticResource MaterialDesignIconButton}" x:Name="CloseButton" Content="{materialDesign:PackIcon Kind=WindowClose}" Width="30" Height="30" Margin="5" VerticalAlignment="Top" Click="Close"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="1" Margin="20 05 20 20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="FnameTxt" Text="{Binding SelectedStudent.FirstName}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                      Margin="0 10 20 20" Height="50" Width="300" FontSize="20"
                      Grid.Column="0" MaxLength="20">
                                <materialDesign:HintAssist.Hint>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="First Name" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </materialDesign:HintAssist.Hint>
                            </TextBox>

                            <TextBox x:Name="LnameTxt"  Text="{Binding SelectedStudent.LastName}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                      Margin="0 10 20 20" Height="50" Width="300" FontSize="20"
                      Grid.Column="1" MaxLength="20">
                                <materialDesign:HintAssist.Hint>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Last Name" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </materialDesign:HintAssist.Hint>
                            </TextBox>
                        </Grid>

                        <Grid Grid.Row="1">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="idTxt" Text="{Binding SelectedStudent.StudentId}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                     Margin="0 10 20 20" Height="50" Width="300" FontSize="20" IsReadOnly="True"
                                     Grid.Column="0" MaxLength="20">
                                <materialDesign:HintAssist.Hint>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Student ID" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </materialDesign:HintAssist.Hint>
                            </TextBox>

                            <TextBox x:Name="emailTxt" Text="{Binding SelectedStudent.Email}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                     Margin="0 10 0 20" Height="50" Width="300" FontSize="20"
                                     Grid.Column="1" MaxLength="20">
                                <materialDesign:HintAssist.Hint>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Email" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </materialDesign:HintAssist.Hint>
                            </TextBox>
                        </Grid>

                        <Grid Grid.Row="2" Margin="0 0 0 0">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox x:Name="courseCmb" Text="{Binding SelectedStudent.Program}" Style="{StaticResource MaterialDesignFloatingHintComboBox}" 
                       Margin="0,10,20,0" Height="50" Width="300" FontSize="20"
                       Grid.Column="0" SelectedValuePath="Content">
                                <materialDesign:HintAssist.Hint>
                                    Course
                                </materialDesign:HintAssist.Hint>

                                <ComboBoxItem>BSCS</ComboBoxItem>
                                <ComboBoxItem>BSBA</ComboBoxItem>
                                <ComboBoxItem>BSHM</ComboBoxItem>
                            </ComboBox>

                            <ComboBox x:Name="yearCmb" Text="{Binding SelectedStudent.YearLevel}" Style="{StaticResource MaterialDesignFloatingHintComboBox}" 
                       Margin="0,10,20,0" Height="50" Width="300" FontSize="20"
                       Grid.Column="1" SelectedValuePath="Content">
                                <materialDesign:HintAssist.Hint>
                                    YearLevel
                                </materialDesign:HintAssist.Hint>

                                <ComboBoxItem>1st Year</ComboBoxItem>
                                <ComboBoxItem>2nd Year</ComboBoxItem>
                                <ComboBoxItem>3rd Year</ComboBoxItem>
                                <ComboBoxItem>4th Year</ComboBoxItem>
                            </ComboBox>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="2" Margin="10 0 10 10">
                        <Grid>
                            <Button Style="{StaticResource MaterialDesignFlatDarkBgButton}" Click="saveBtn">SAVE</Button>
                        </Grid>
                    </Grid>
                </Grid>
            </materialDesign:Card>
        </Border>
    </Grid>
</Window>
