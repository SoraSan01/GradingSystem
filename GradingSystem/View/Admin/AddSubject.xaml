<Window x:Class="GradingSystem.View.Admin.AddSubject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradingSystem.View.Admin"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" Height="400" Width="700"
        WindowStyle="None" Background="{x:Null}" AllowsTransparency="True" MouseDown="Window_MouseDown">

    <Grid>
        <materialDesign:Card Padding="5 5 5 5" Background="Gray">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Border Background="Black" Margin="05 05 05 05" CornerRadius="5" Width="500" HorizontalAlignment="Left">
                        <materialDesign:Card Effect="{StaticResource MaterialDesignElevationShadow1}" Width="auto">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Background="Green">
                                    <Grid HorizontalAlignment="Left">
                                        <TextBlock Text="Add Courses" Margin="10 0 0 0" 
                   FontSize="15"
                   Style="{StaticResource MaterialDesignCaptionTextBlock}" 
                   VerticalAlignment="Center"/>
                                    </Grid>
                                    <Grid HorizontalAlignment="Right">
                                        <StackPanel Margin="0 0 0 0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                                            <Button Style="{StaticResource MaterialDesignIconButton}" x:Name="CloseButton" Content="{materialDesign:PackIcon Kind=WindowClose}" Width="30" Height="30" Margin="5" VerticalAlignment="Top" Click="Close"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Row="1" Margin="20 05 20 20">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox x:Name="SubjectidTxt" Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
     Margin="0 10 20 20" Height="50" Width="220" FontSize="20"
     Grid.Column="0" MaxLength="20">
                                            <materialDesign:HintAssist.Hint>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Course ID" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </materialDesign:HintAssist.Hint>
                                        </TextBox>

                                        <TextBox x:Name="codeTxt"  Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
     Margin="0 10 0 20" Height="50" Width="220" FontSize="20"
     Grid.Column="1" MaxLength="20">
                                            <materialDesign:HintAssist.Hint>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Course Code" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </materialDesign:HintAssist.Hint>
                                        </TextBox>
                                    </Grid>

                                    <Grid Grid.Row="1">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox x:Name="nameTxt" Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                  Margin="0 10 20 20" Height="50" Width="220" FontSize="20"
                  Grid.Column="0" MaxLength="20">
                                            <materialDesign:HintAssist.Hint>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Descriptive Title" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </materialDesign:HintAssist.Hint>
                                        </TextBox>

                                        <TextBox x:Name="unitTxt"  Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                  Margin="0 10 0 20" Height="50" Width="220" FontSize="20"
                  Grid.Column="1" MaxLength="20">
                                            <materialDesign:HintAssist.Hint>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Units" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </materialDesign:HintAssist.Hint>
                                        </TextBox>
                                    </Grid>

                                    <Grid Grid.Row="2" Margin="0 0 0 0">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox x:Name="ProfessorTxt"  Style="{StaticResource MaterialDesignTextBox}" 
                  Margin="0,10,20,0" Height="50" Width="220" FontSize="20"
                  Grid.Column="0">
                                            <materialDesign:HintAssist.Hint>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Professor Name" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </materialDesign:HintAssist.Hint>
                                        </TextBox>

                                        <TextBox x:Name="ScheduleTxt" Style="{StaticResource MaterialDesignTextBox}" 
      Margin="0,10,20,0" Height="50" Width="220" FontSize="20"
      Grid.Column="1">
                                            <materialDesign:HintAssist.Hint>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Schedule" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </materialDesign:HintAssist.Hint>
                                        </TextBox>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Row="2" Margin="10 0 10 10">
                                    <Grid>
                                        <Button Style="{StaticResource   MaterialDesignFlatDarkBgButton}">SAVE</Button>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </materialDesign:Card>
                    </Border>
                </Grid>
                <Grid Grid.Column="1" HorizontalAlignment="Right">
                    <materialDesign:Card Background="Green" Width="180">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                            </Grid>
                            <Grid Grid.Row="1">
                                <Button Content="Bulk Insert" Width="150" Height="35" Margin="0,0,0,0" VerticalAlignment="Top" Click="BulkInsertBtn"/>
                            </Grid>
                        </Grid>
                    </materialDesign:Card>
                </Grid>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>
