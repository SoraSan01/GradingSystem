<Window x:Class="GradingSystem.View.Admin.BulkInsertCourse"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradingSystem.View.Admin"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" Height="400" Width="1000"
        WindowStyle="None" Background="{x:Null}" AllowsTransparency="True" MouseDown="Window_MouseDown">
    <Grid>
        <materialDesign:Card Padding="5 5 5 5" Background="Gray">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Border Background="Black" Margin="05 05 05 05" CornerRadius="5" Width="800" HorizontalAlignment="Left">
                        <materialDesign:Card Effect="{StaticResource MaterialDesignElevationShadow1}" Width="auto">

                            <DataGrid ItemsSource="{Binding Courses}" AutoGenerateColumns="True">
                            </DataGrid>

                        </materialDesign:Card>
                    </Border>
                </Grid>
                <Grid Grid.Column="1" HorizontalAlignment="Right">
                    <materialDesign:Card Background="Green" Width="180">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                            </Grid>
                            
                            <Grid Grid.Row="1">
                            </Grid>
                            
                            <Grid Grid.Row="2" VerticalAlignment="Bottom">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <!-- First row -->
                                        <RowDefinition Height="Auto" />
                                        <!-- Second row -->
                                    </Grid.RowDefinitions>

                                    <!-- Button in the first row -->
                                    <Button Grid.Row="0" Content="Browse" Margin="5" Width="auto" Click="BrowseBtn"  />

                                    <!-- Button in the second row -->
                                    <Button Grid.Row="1" Content="Save" Margin="5" Width="auto" Command="{Binding SaveCommand}"/>
                                </Grid>
                            </Grid>
                        </Grid>
                    </materialDesign:Card>
                </Grid>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>
